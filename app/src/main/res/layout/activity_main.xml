<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rellis.higherlower.MainActivity">

    <RelativeLayout
        android:layout_width="382dp"
        android:layout_height="505dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="3dp">

        <Button
            android:id="@+id/buttonGuess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/secondTextLabel"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginTop="67dp"
            android:onClick="getGuessNumber"
            android:text="Guess"
            tools:layout_editor_absoluteX="127dp"
            tools:layout_editor_absoluteY="175dp" />

        <EditText
            android:id="@+id/guessText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/secondTextLabel"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="34dp"
            android:ems="10"
            android:hint="Enter Number Here"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="101dp" />

        <TextView
            android:id="@+id/firstTextLabel"
            android:layout_width="368dp"
            android:layout_height="26dp"
            android:text="Guess a number between 1 and 20"
            app:layout_constraintBottom_toTopOf="@+id/secondTextLabel"
            tools:layout_editor_absoluteX="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/secondTextLabel"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:text="Guess below:"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="62dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_below="@+id/firstTextLabel"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
